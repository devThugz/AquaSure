rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles - basic access rules
    match /users/{userId} {
      // Users can read and update their own data
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Only admins can create/delete user profiles
      allow create, delete: if request.auth != null && 
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
      // Sub-collections under user profiles
      match /pet_fish/{fishId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      match /feeding_logs/{logId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update, delete: if false; // Immutable logs
      }
      match /nemo_chat/{messageId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId;
        allow update, delete: if false; // Immutable chat logs
      }
    }
    // Roles collection - critical for security
    match /roles/{userId} {
      // Users can read their own role
      allow read: if request.auth != null && request.auth.uid == userId;
      // Only super_admin can write to roles
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role == 'super_admin';
    }
    // Emergency reports
    match /emergency_reports/{reportId} {
      // Users can create reports and read their own reports
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role in ['admin', 'super_admin']
      );
      // Only admins can update status
      allow update: if request.auth != null && 
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role in ['admin', 'super_admin'] &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'handledBy', 'notes']);
    }
    // Fisher locations - critical for GPS tracking
    match /fisher_locations/{userId} {
      // Users can update their own location
      allow create, update: if request.auth != null && request.auth.uid == userId;
      // Users can read their own location
      allow read: if request.auth != null && request.auth.uid == userId;
      // Admins can read all locations
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
      // Region-specific admin access
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role == 'admin' &&
        resource.data.region == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.region;
    }
    // Transactions
    match /transactions/{transactionId} {
      // Users can read their own transactions
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Only the system can create transactions (via Cloud Functions)
      allow create: if false;
      // Transactions are immutable once created
      allow update, delete: if false;
    }
    // Announcements
    match /announcements/{announcementId} {
      // Anyone can read announcements
      allow read: if request.auth != null;
      // Only admins can create/update announcements
      allow create, update: if request.auth != null && 
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
      // Only super_admin can delete announcements
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role == 'super_admin';
    }
    // Leaderboard
    match /leaderboard/{entryId} {
      // Anyone can read the leaderboard
      allow read: if request.auth != null;
      // Only the system can update leaderboard (via Cloud Functions)
      allow write: if false;
    }
  }
}